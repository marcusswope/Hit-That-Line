@using FubuMVC.Core.Assets.Files
@using FubuMVC.Core.UI
@using HitThatLine.Web.Endpoints.Account.Models
@using HitThatLine.Web.Endpoints.Discussion.Models
@using HitThatLine.Web.Utility
<!DOCTYPE html>
<html>
<head>
    <title>Hit That Line</title>
    @{this.Asset("siteStyles");}
    @{this.Asset("siteScripts");}
</head>
    <body>
        <div id="container" class="container_12" style="">
            @this.Clear(5)
            <div id="main-header">
                @(this.LinkTo<DiscussionHomeInputModel>().Text("Discussion").Suffix(1))
                @(this.LinkTo<DiscussionHomeInputModel>().Text("Chat").Suffix(1))
                <div id="main-logo" class="grid_6">
                    @this.SvgImage("hitthatline.svg")
                </div>
                @(this.LinkTo<NewAccountInputModel>().Text("Help").Grid().Suffix(1))
                @(this.LinkTo<NewAccountInputModel>().Text("Register").Grid().Suffix(1))
                @(this.LinkTo<NewAccountInputModel>().Text("Login").Grid().Suffix(1))
            </div>
            @this.Clear(10)
            <div id="page">
                @RenderBody()
            </div>
        </div>
        @this.WriteCssTags()
        @this.WriteScriptTags()
        <script type="text/javascript">
            $.htl.urls({
                stylesDir: '@Urls.UrlForAsset(AssetFolder.styles, "site.css").TrimEnd("site.css".ToCharArray())'
            });
        </script>
    </body>
</html>
